@model Project.Web.Areas.Company.ViewModels.UploadContractInputModel

<div class="row">
    <div class="col-md-4">
        <form asp-area="Company" asp-controller="Contract" asp-action="Upload" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContractFile" class="control-label"></label>
                <input  asp-for="ContractFile" class="form-control" />
                <span asp-validation-for="ContractFile" class="text-danger"></span>
            </div>
            <input  asp-for="JobId" value="@ViewBag.JobId" hidden/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

